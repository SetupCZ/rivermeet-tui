{
  "name": "rivermeet-tui",
  "version": "0.0.6",
  "description": "Terminal UI for Confluence",
  "type": "module",
  "bin": {
    "rivermeet-tui": "./dist/rivermeet-tui"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "mkdir -p dist && bun build --compile --outfile dist/rivermeet-tui src/index.tsx",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/setupcz/confluence-tui"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.54"
  }
}
